<Window x:Class="SISTEMA_ACUMULATIVAS.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SISTEMA_ACUMULATIVAS"
        mc:Ignorable="d"
        Title="LoginWindow" Height="450" Width="700"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None"  ResizeMode="NoResize"
        AllowsTransparency="True" Background="Transparent">

    <Grid MouseLeftButtonDown="Grid_MouseLeftButtonDown">

        <Border Background="White" CornerRadius="10">
            <Border.Effect>
                <DropShadowEffect ShadowDepth="1" Color="Black" Opacity="0.4" BlurRadius="10"/>
            </Border.Effect>
        </Border>

        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="#FF1E1E1E" 
                    CornerRadius="10,0,0,10">
                <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                    <Image Source="/Ruta/A/Tu/Logo.png" Width="100" Height="100" Margin="0,0,0,20"/>
                    <TextBlock Text="Acumulativas" 
                               Foreground="White" 
                               FontSize="24" FontWeight="Bold" 
                               HorizontalAlignment="Center"/>
                    <TextBlock Text="NOTARÍA PÚBLICA No. " 
                               Foreground="#FFB0B0B0" FontSize="12" 
                               HorizontalAlignment="Center"/>
                </StackPanel>
            </Border>

            <StackPanel Grid.Column="1" Margin="40">
                <TextBlock Text="INICIAR SESIÓN" 
                           FontSize="24" FontWeight="Bold" 
                           Foreground="#FF333333" 
                           HorizontalAlignment="Left" Margin="0,30,0,10"/>
                <TextBlock Text="Accede a tu cuenta para continuar." 
                           FontSize="14" Foreground="#FF666666" 
                           HorizontalAlignment="Left" Margin="0,0,0,30"/>

                <TextBlock Text="Nombre de Usuario" Foreground="#FF555555" FontWeight="Medium"/>
                <TextBox x:Name="txtUsuario" 
                         FontSize="14" Padding="5" Margin="0,5,0,15"
                         BorderBrush="#FFCCCCCC" BorderThickness="1"/>

                <TextBlock Text="Contraseña" Foreground="#FF555555" FontWeight="Medium"/>
                <Grid>
                    <PasswordBox x:Name="txtPassword" 
                                 FontSize="14" Padding="5" Margin="0,5,0,0"
                                 BorderBrush="#FFCCCCCC" BorderThickness="1"/>
                    <TextBox x:Name="txtPasswordVisible" 
                             FontSize="14" Padding="5" Margin="0,5,0,0"
                             BorderBrush="#FFCCCCCC" BorderThickness="1"
                             Visibility="Collapsed"/>

                    <Button x:Name="btnMostrarPass" Content="👁️" 
                            HorizontalAlignment="Right" Margin="0,5,5,0" 
                            Width="30" Height="26" VerticalAlignment="Center"
                            BorderThickness="0" Background="Transparent" 
                            Foreground="#FF666666" Cursor="Hand"
                            Click="btnMostrarPass_Click"/>
                </Grid>

                <Button x:Name="btnIniciarSesion" Content="Iniciar Sesión" 
                        FontSize="16" FontWeight="Bold" 
                        Foreground="White" Background="#FF007BFF" 
                        Padding="10" Margin="0,30,0,10" 
                        BorderThickness="0" Cursor="Hand"
                        Click="btnIniciarSesion_Click"/>

                <TextBlock HorizontalAlignment="Center" Margin="0,10,0,0">
                    <Run Text="¿Necesitas una cuenta?" Foreground="#FF666666"/>
                    <Hyperlink x:Name="linkRegistro" Click="linkRegistro_Click">
                        <Run Text="Regístrate aquí."/>
                    </Hyperlink>
                </TextBlock>

                <Button x:Name="btnSalir" Content="Salir de la Aplicación" 
                        Background="Transparent" BorderThickness="0" 
                        Foreground="Red" HorizontalAlignment="Center" 
                        Margin="0,10,0,0" Cursor="Hand"
                        Click="btnSalir_Click"/>

            </StackPanel>
        </Grid>
    </Grid>
</Window>