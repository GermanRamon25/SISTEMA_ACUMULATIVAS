<UserControl x:Class="SISTEMA_ACUMULATIVAS.Views.AvisoUifView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:wv2="clr-namespace:Microsoft.Web.WebView2.Wpf;assembly=Microsoft.Web.WebView2.Wpf"
             mc:Ignorable="d" 
             d:DesignHeight="700" d:DesignWidth="1200"
             Background="#FFF0F4F8" Loaded="UserControl_Loaded">

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Border Grid.Row="0" Background="White" CornerRadius="5" Padding="15" Margin="0,0,0,10">
            <DockPanel>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                    <TextBlock Text="Periodo a Revisar:" VerticalAlignment="Center" FontWeight="SemiBold" Margin="0,0,10,0"/>
                    <ComboBox x:Name="cmbMes" Width="150" Padding="5" Margin="0,0,5,0"/>
                    <ComboBox x:Name="cmbAnio" Width="100" Padding="5"/>

                    <Button x:Name="btnBuscar" Content="🔍 Buscar Avisos" 
                            Margin="15,0,0,0" Padding="15,5" Background="#FF007BFF" Foreground="White"
                            FontWeight="Bold" BorderThickness="0" Click="btnBuscar_Click"/>
                </StackPanel>

                <Button x:Name="btnImprimir" Content="🖨️ Imprimir Ficha" DockPanel.Dock="Right"
                        Padding="15,5" Background="#FF28A745" Foreground="White"
                        FontWeight="Bold" BorderThickness="0" Click="btnImprimir_Click" IsEnabled="False"/>
            </DockPanel>
        </Border>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="1.5*"/>
                <ColumnDefinition Width="2*"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="White" CornerRadius="5" Padding="10" Margin="0,0,5,0">
                <DockPanel>
                    <TextBlock DockPanel.Dock="Top" Text="Clientes Sujetos a Aviso" 
                               FontSize="16" FontWeight="Bold" Foreground="#FFDC3545" Margin="0,0,0,10"/>
                    <DataGrid x:Name="dgClientesAviso" AutoGenerateColumns="False" IsReadOnly="True" 
                              SelectionMode="Single" SelectionChanged="dgClientesAviso_SelectionChanged">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Cliente" Binding="{Binding NombreCliente}" Width="*"/>
                            <DataGridTextColumn Header="Monto Total" Binding="{Binding MontoTotalAcumulado, StringFormat=C}" Width="120"/>
                            <DataGridTextColumn Header="Motivo" Binding="{Binding MotivoAviso}" Width="140"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </DockPanel>
            </Border>

            <Border Grid.Column="1" Background="White" CornerRadius="5" Padding="0" Margin="5,0,0,0" ClipToBounds="True">
                <Grid>
                    <wv2:WebView2 x:Name="webView" Visibility="Hidden"/>
                    <TextBlock x:Name="txtInstruccion" Text="&lt; Seleccione un cliente para generar la Ficha." 
                               HorizontalAlignment="Center" VerticalAlignment="Center" 
                               Foreground="#FFAAAAAA" FontSize="16"/>
                </Grid>
            </Border>
        </Grid>
    </Grid>
</UserControl>