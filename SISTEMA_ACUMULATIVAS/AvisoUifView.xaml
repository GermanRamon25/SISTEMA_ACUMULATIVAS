<UserControl x:Class="SISTEMA_ACUMULATIVAS.Views.AvisoUifView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SISTEMA_ACUMULATIVAS.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1200"
             Background="#FFF0F4F8" Loaded="UserControl_Loaded">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <Border Grid.Column="0" Background="White" CornerRadius="5" Padding="15" Margin="0,0,5,0">
            <DockPanel>
                <TextBlock DockPanel.Dock="Top" Text="Operaciones a Incluir en el Aviso" 
                           FontSize="18" FontWeight="Bold" Foreground="#FF007BFF" Margin="0,0,0,10"/>

                <!-- CORREGIDO (Línea 24) -->
                <TextBlock DockPanel.Dock="Top" Text="Clientes que superaron el Umbral de Aviso (16,050 UMAs) en el periodo seleccionado." 
                           Foreground="#FF555555" Margin="0,0,0,15"/>

                <DataGrid x:Name="dgOperacionesAviso" AutoGenerateColumns="False" IsReadOnly="True">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Cliente" Binding="{Binding ClienteNombre}" Width="*"/>
                        <DataGridTextColumn Header="Operación" Binding="{Binding TipoOperacion}" Width="150"/>
                        <DataGridTextColumn Header="Folio" Binding="{Binding FolioEscritura}" Width="100"/>
                        <DataGridTextColumn Header="Monto Total" Binding="{Binding MontoTotal, StringFormat='C'}" Width="130"/>
                        <DataGridTextColumn Header="Fecha" Binding="{Binding FechaOperacion, StringFormat='dd/MM/yyyy'}" Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>
            </DockPanel>
        </Border>

        <GridSplitter Grid.Column="0" Width="5" HorizontalAlignment="Right" Background="Transparent"/>

        <Border Grid.Column="1" Background="White" CornerRadius="5" Padding="20">
            <StackPanel>
                <TextBlock Text="Generar Aviso UIF" FontSize="18" FontWeight="Bold" 
                           Foreground="#FF007BFF" Margin="0,0,0,20"/>

                <TextBlock Text="Periodo de Reporte:" FontWeight="SemiBold"/>
                <Grid Margin="0,5,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <ComboBox x:Name="cmbMes" Grid.Column="0" Padding="5" Margin="0,0,5,0">
                        <!-- Llenaremos esto con C# -->
                    </ComboBox>

                    <ComboBox x:Name="cmbAnio" Grid.Column="1" Padding="5" Margin="5,0,0,0">
                        <!-- Llenaremos esto con C# -->
                    </ComboBox>
                </Grid>

                <!-- Botón de Cargar -->
                <Button x:Name="btnCargarOperaciones" Content="Cargar Operaciones del Periodo" 
                        Background="#FF007BFF" Foreground="White"
                        Height="35" Margin="0,0,0,20" Click="btnCargarOperaciones_Click"/>

                <!-- Botón de Generar XML -->
                <Button x:Name="btnGenerarXml" Content="Generar y Guardar XML" 
                        Background="#FF17A2B8" Foreground="White"
                        Height="45" Margin="0,10,0,20" FontWeight="Bold" Click="btnGenerarXml_Click" IsEnabled="False"/>

                <!-- Consola de Estatus -->
                <TextBlock Text="Estatus:" FontWeight="SemiBold"/>
                <!-- CORREGIDO (Línea 73) -->
                <Border Background="#FF333333" CornerRadius="5" Height="200" Padding="10">
                    <ScrollViewer VerticalScrollBarVisibility="Auto">
                        <!-- CORREGIDO (Línea 76) -->
                        <TextBlock x:Name="txtLog" Text="Esperando acciones..." 
                                   Foreground="#FFDDDDDD" FontFamily="Consolas" TextWrapping="Wrap"/>
                    </ScrollViewer>
                </Border>

            </StackPanel>
        </Border>
    </Grid>
</UserControl>