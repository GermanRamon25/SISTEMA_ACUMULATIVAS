<UserControl x:Class="SISTEMA_ACUMULATIVAS.Views.ClienteView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SISTEMA_ACUMULATIVAS.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1200"
             Background="#FFF0F4F8" Loaded="UserControl_Loaded">

    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <!-- 66% para el DataGrid -->
            <ColumnDefinition Width="1*"/>
            <!-- 33% para el Formulario -->
        </Grid.ColumnDefinitions>

        <!-- ==================== COLUMNA 1: LISTA DE CLIENTES (DataGrid) ==================== -->
        <Border Grid.Column="0" Background="White" CornerRadius="5" Padding="10">
            <DockPanel>
                <!-- Barra de Búsqueda -->
                <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="Buscar por Nombre o RFC:" VerticalAlignment="Center" FontWeight="SemiBold"/>
                    <TextBox x:Name="txtBusqueda" Width="300" Margin="10,0" Padding="5"
                             TextChanged="txtBusqueda_TextChanged"/>
                </StackPanel>

                <!-- DataGrid (Tabla de Clientes) -->
                <DataGrid x:Name="dgClientes" AutoGenerateColumns="False" 
                          IsReadOnly="True" SelectionMode="Single"
                          SelectionChanged="dgClientes_SelectionChanged">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                        <DataGridTextColumn Header="Nombre" Binding="{Binding Nombre}" Width="*"/>
                        <DataGridTextColumn Header="RFC" Binding="{Binding RFC}" Width="130"/>
                        <DataGridTextColumn Header="Tipo" Binding="{Binding TipoPersonaDisplay}" Width="100"/>
                        <DataGridTextColumn Header="Fecha Registro" Binding="{Binding FechaRegistro, StringFormat='dd/MM/yyyy'}" Width="120"/>
                    </DataGrid.Columns>
                </DataGrid>
            </DockPanel>
        </Border>

        <!-- Divisor -->
        <GridSplitter Grid.Column="0" Width="5" HorizontalAlignment="Right" Background="Transparent"/>

        <!-- ==================== COLUMNA 2: FORMULARIO DE REGISTRO ==================== -->
        <Border Grid.Column="1" Background="White" CornerRadius="5" Padding="20">
            <ScrollViewer VerticalScrollBarVisibility="Auto">
                <StackPanel x:Name="FormularioCliente">
                    <TextBlock Text="Detalles del Cliente" FontSize="18" FontWeight="Bold" 
                               Foreground="#FF007BFF" Margin="0,0,0,20"/>

                    <!-- ID (Solo lectura) -->
                    <TextBlock Text="ID Cliente:" FontWeight="SemiBold"/>
                    <TextBox x:Name="txtId" IsReadOnly="True" Background="#FFEEEEEE" 
                             Margin="0,5,0,10" Padding="5"/>

                    <!-- Nombre -->
                    <TextBlock Text="Nombre Completo / Razón Social:" FontWeight="SemiBold"/>
                    <TextBox x:Name="txtNombre" Margin="0,5,0,10" Padding="5"/>

                    <!-- RFC -->
                    <TextBlock Text="RFC (Único):" FontWeight="SemiBold"/>
                    <TextBox x:Name="txtRFC" MaxLength="13" Margin="0,5,0,10" Padding="5"/>

                    <!-- CURP -->
                    <TextBlock Text="CURP (Opcional):" FontWeight="SemiBold"/>
                    <TextBox x:Name="txtCURP" MaxLength="18" Margin="0,5,0,10" Padding="5"/>

                    <!-- Tipo Persona -->
                    <TextBlock Text="Tipo de Persona:" FontWeight="SemiBold"/>
                    <ComboBox x:Name="cmbTipoPersona" Margin="0,5,0,20" Padding="5">
                        <ComboBoxItem Content="Persona Física" Tag="F"/>
                        <ComboBoxItem Content="Persona Moral" Tag="M"/>
                    </ComboBox>

                    <!-- Botones de Acción -->
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Button x:Name="btnNuevo" Content="Nuevo" 
                                Background="#FF007BFF" Foreground="White"
                                Height="35" Margin="5" Click="btnNuevo_Click"/>

                        <Button x:Name="btnGuardar" Content="Guardar" 
                                Grid.Column="1" Background="#FF28A745" Foreground="White"
                                Height="35" Margin="5" Click="btnGuardar_Click"/>

                        <Button x:Name="btnEliminar" Content="Desactivar" 
                                Grid.Column="2" Background="#FFDC3545" Foreground="White"
                                Height="35" Margin="5" Click="btnEliminar_Click"/>
                    </Grid>
                </StackPanel>
            </ScrollViewer>
        </Border>
    </Grid>
</UserControl>